<div class="section-header">
    <h1>Setores</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item"><%= link_to 'Início', root_path %></div>
        <div class="breadcrumb-item">Listando Setores</div>
    </div> 
</div>
<section class="section-body">  
  <div class="card">
    <div class="card-header">
      <h4>Listando Setores</h4>
      <div class="card-header-action">
        <%= link_to new_sector_path, class:"btn btn-icon icon-left btn-success" do %>
          <i class="fas fa-plus"></i> Novo Setor
        <% end %>
      </div>  
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col"><%= @sectors.human_attribute_name(:id)%></th>
              <th scope="col"><%= @sectors.human_attribute_name(:description)%></th>
              <th scope="col"><%= @sectors.human_attribute_name(:initials)%></th>
              <th scope="col"><%= @sectors.human_attribute_name(:parentsector)%></th>
              <th scope="col"><%= @sectors.human_attribute_name(:collaboratorresp)%></th>
              <th scope="col">Ação</th>
            </tr>
          <thead>
          <tbody>
            <% @sectors.each do |sector| %>
              <tr>
                <td><%= sector.id %></td>
                <td><%= sector.description %></td>
                <td><%= sector.initials %></td>
                <td><%= sector.parentsector %></td>
                <td><%= sector.collaboratorresp %></td>
                <td><%= link_to edit_sector_path(sector), class:"btn btn-icon btn-primary" do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to sector, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-icon btn-danger" do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="container pagination justify-content-center" >
          <%= paginate @sectors, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
        </div>
      </div>
    </div>
  </div>
</section>