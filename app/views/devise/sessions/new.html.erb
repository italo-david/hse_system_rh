
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Login &mdash; RhSystem</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'welcome' %>

</head>
<body>
  <div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-13 col-sm-9 offset-sm-3 col-md-7 offset-md-4 col-lg-8 offset-lg-4 col-xl-5 offset-xl-3">
            

            <div class="card card-primary">
              <p></p>
              <p class="text-center"><%= image_tag 'logo.png', alt:"logo", width:"150", height:"52", class:"shadow-light" %></p>
              <div class="card-header"><h4>Login</h4></div>

              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"needs-validation", novalidate:"") do |f| %>
                  <div class="form-group">
                    <%= f.label :email %><br/>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: true %>
                    <div class="invalid-feedback">
                      Please fill in your email
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="d-block">
                      <%= f.label :password, class:"control-label" %><br />
                      <div class="float-right">
                        <a href="auth-forgot-password.html" class="text-small">
                          Forgot Password?
                        </a>
                      </div>
                    </div>
                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", required: true %>
                    <div class="invalid-feedback">
                      please fill in your password
                    </div>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox">
                        <%= f.check_box :remember_me, class:"custom-control-input"%>
                        <%= f.label :remember_me, class:"custom-control-label"%>
                      </div>
                    </div>  
                  <% end %>

                  <div class="form-group text-right">
                    <%= f.submit "Entrar", class:"btn btn-primary btn-lg btn-icon icon-right", tabindex:"4" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-5 text-muted text-center">
          Don't have an account? <%= link_to 'Create One', new_user_registration_path %>
        </div>
      </div>
    </section>
  </div>

    <%= javascript_include_tag 'welcome' %>
    <%= javascript_include_tag 'application' %>

    <% if flash %>
      <%flash.each do |key, value|%>
        <%= javascript_tag do %>
            $.bootstrapGrowl('<%= value %>', {
            type: 'danger', // (null, 'info', 'danger', 'success')
            align: 'right', // ('left', 'right', or 'center')
            allow_dismiss: true, // If true then will display a cross to close the popup.
            stackup_spacing: 10 // spacing between consecutively stacked growls.
            });
        <% end %>
    <% end %>
  <% end %>
 
  <!-- Page Specific JS File -->
</body>
</html>