<section class="section">
    <div class="section-header">
        <h1>Horários</h1>        
    </div>  
</section>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
         <%= link_to new_daily_hour_path, class:"btn btn-icon icon-left btn-success" do %>
                <i class="fas fa-plus"></i> Novo Horário
        <% end %>
        <h4></h4>
          <div class="card-header-form">
          <%= form_with(url:search_path, local: true, method: :get) do |form| %>
              <div class="input-group">
              <%= form.text_field :term, class:"form-control", placeholder:"Search" %>
                <div class="input-group-btn">
                  <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col"><%= @daily_hours.human_attribute_name(:id)%></th>
                  <th scope="col"><%= @daily_hours.human_attribute_name(:shift)%></th>
                  <th scope="col"><%= @daily_hours.human_attribute_name(:description)%></th>
                  <th scope="col">Ação</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_hours.each do |daily_hour| %>
                  <tr>
                    <td><%= daily_hour.id %></td>
                    <td><%= daily_hour.shift %></td>
                    <td><%= daily_hour.description %></td>
                    <td><%= link_to edit_daily_hour_path(daily_hour), class:"btn btn-icon btn-primary" do %>
                      <i class="far fa-edit"></i>
                    <% end %>
                    <%= link_to daily_hour, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-icon btn-danger" do %>
                      <i class="fas fa-times"></i>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          
          <div class="container pagination justify-content-center" >
            <%= paginate @daily_hours, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
          </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>