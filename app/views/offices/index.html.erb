<div class="section-header">
    <h1>Cargos</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Início', root_path %></div>
      <div class="breadcrumb-item">Listando Cargos</div>
    </div>           
</div>  
<section class="section-body"> 
  <div class="card">
    <div class="card-body">
      <%= search_form_for @q do |f| %>
       <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :description_cont, "Cargo" %>
            <%= f.text_field :description_cont, class:"form-control" %>
          </div>
        </div>  
        <div class="input-group-btn">
          <%= f.submit "Pesquisar", class:"btn btn-primary"%>
        </div> 
      <% end %>
    </div>     
  </div>  
  <div class="card">
    <div class="card-header">
      <h4>Listando Cargos</h4>
      <div class="card-header-action">
        <%= link_to new_office_path, class:"btn btn-icon icon-left btn-success" do %>
          <i class="fas fa-plus"></i> Novo Cargo
        <% end %>
      </div>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col"><%= @offices.human_attribute_name(:id)%></th>
              <th scope="col"><%= @offices.human_attribute_name(:description)%></th>
              <th scope="col">Ação</th>
            </tr>
          </thead>
          <tbody>
            <% @offices.each do |office| %>
              <tr>
                <td><%= office.id %></td>
                <td><%= office.description %></td>
                <td><%= link_to edit_office_path(office), class:"btn btn-icon btn-primary" do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to office, method: :delete, data: { sconfirm: 'Are you sure?' }, class:"btn btn-icon btn-danger" do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="container pagination justify-content-center" >
          <%= paginate @offices, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
        </div>
      </div>
    </div>
  </div>
      <button class="btn btn-primary" id="swal-6">Launch</button>
</section>
