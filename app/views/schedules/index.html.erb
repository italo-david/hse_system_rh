<section class="section">
    <div class="section-header">
        <h1>Escalas</h1>        
    </div>  
</section>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
         <%= link_to new_schedule_path, class:"btn btn-icon icon-left btn-success" do %>
                <i class="fas fa-plus"></i> Nova Escala
          <% end %>
          <h4></h4>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col"><%= @schedules.human_attribute_name(:id)%></th>
                  <th scope="col"><%= @schedules.human_attribute_name(:typo)%></th>
                  <th scope="col"><%= @schedules.human_attribute_name(:description)%></th>
                  <th>Ação</th>
                </tr>
              </thead>
              <tbody>
                <% @schedules.each do |schedule| %>
                  <tr>
                    <td><%= schedule.id %></td>
                    <td><%= schedule.typo %></td>
                    <td><%= schedule.description %></td>
                    <td><%= link_to edit_schedule_path(schedule), class:"btn btn-icon btn-primary" do %>
                      <i class="far fa-edit"></i>
                    <% end %>
                    <%= link_to schedule, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-icon btn-danger" do %>
                      <i class="fas fa-times"></i>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          
          <div class="container pagination justify-content-center" >
            <%= paginate @schedules, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
          </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
