 <div class="card">
   <div class="card-body"> 
      <%= form_with(model: schedule, local: true) do |form| %>
        <% if schedule.errors.any? %>
          <div class="alert alert-danger alert-dismissible show fade">
            <div class="alert-title">Atenção!!</div>
                <button class="close" data-dismiss="alert"><span>×</span></button>
                <ul>
                    <% schedule.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-row">
              <div class="form-group col-md-6">
                <%= form.label :typo, for:"inputyp"%>
                <%= form.text_field :typo, id:"inputyp", class:"form-control", placeholder:"Ex.: 12x36" %>
              </div>
              <div class="form-group col-md-6">
                <%= form.label :description, for:"inputDesc"%>
                <%= form.text_field :description, id:"inputDesc", class:"form-control" , placeholder:"Ex.: Plantão"%>
              </div>
          </div>

          <div class="card-footer">
            <div class="form-group">
              <%= form.submit class:"btn btn-primary" %>
              <%= link_to schedules_path, class:"btn btn-icon icon-left btn-light" do %>
                <i class="fas fa-undo-alt"></i> Voltar
              <% end %>
            </div>
          </div>

      <% end %>
 </div>
</div>